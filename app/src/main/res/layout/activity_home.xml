<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        tools:context=".HomeFragment">

        <TextView
            android:id="@+id/textLayer12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Lega Culurgiones"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/layer"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_marginTop="81dp"
            android:background="@drawable/rounded_border"></View>

        <TextView
            android:id="@+id/textLayer6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="97dp"
            android:gravity="center"
            android:text="PROSSIMO MATCH"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inserisci_formazione"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="234dp"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/blue"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:radius="6dp"
            android:text="INSERISCI FORMAZIONE"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="137dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/team1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Team 1"
                android:src="@drawable/team1" />

            <TextView
                android:id="@+id/versusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VS"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/team2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Team 2"
                android:src="@drawable/team2" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvRosa"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/layer"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:paddingHorizontal="20dp"
            android:text="La tua Rosa"
            android:textColor="@color/black"
            android:textSize="19sp"
            app:drawableLeftCompat="@drawable/rosa"
            app:drawableRightCompat="@drawable/baseline_arrow_forward_24" />

        <TextView
            android:id="@+id/tvMatchLive"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/tvRosa"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:paddingHorizontal="20dp"
            android:text="Match Live"
            android:textColor="@color/black"
            android:textSize="19sp"
            app:drawableLeftCompat="@drawable/rosa"
            app:drawableRightCompat="@drawable/baseline_arrow_forward_24" />

        <TextView
            android:id="@+id/Notizie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMatchLive"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:text="Ultime news"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/News1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/Notizie"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:text="Milan, tegola Florenzi: ecco l'entita' dell'infortunio e i tempi di recupero"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/breaking_news_fill0_wght400_grad0_opsz24" />

        <TextView
            android:id="@+id/News2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/News1"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:text="Inter, morto Dumfries"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/breaking_news_fill0_wght400_grad0_opsz24" />

    </RelativeLayout>

</ScrollView>