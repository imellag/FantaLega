<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="La tua rosa"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Lista dei portieri -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portieri"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple"
                android:background="@drawable/rounded_border"

                >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple"
                android:layout_marginTop="10dp"
                android:outlineAmbientShadowColor="@color/black"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="MAIGNAN"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/purpleborder"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    >
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="TURATI"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/purpleborder"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="OKOYE"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/purpleborder"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp">
                </TextView>

            </LinearLayout>

            <!-- Lista dei difensori -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Difensori"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:background="@drawable/rounded_border">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="SCALVINI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="BANI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="DUMFRIES"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="MARI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="DIMARCO"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="T. HERNANDEZ"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="ZORTEA"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="RRAHMANI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/blueborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

            </LinearLayout>

            <!-- Lista dei centrocampisti -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Centrocampisti"
                android:gravity="center"
                android:background="@drawable/rounded_border"
                android:padding="10dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="PULISIC"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:padding="10dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="IKONE"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:layout_marginTop="5dp"
                    android:padding="10dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="EDERSON"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:layout_marginTop="5dp"
                    android:padding="10dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="COLPANI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="GUENDOUZI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="MAZZITELLI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="PEREYRA"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="TRAORE"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/orangeborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

            </LinearLayout>

            <!-- Lista degli attaccanti -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attaccanti"
                android:gravity="center"
                android:background="@drawable/rounded_border"
                android:padding="10dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/red">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="LUKAKU"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/redborder"
                    android:padding="10dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="KRSTOVIC"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/redborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="CAMBIAGHI"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/redborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="NIANG"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/redborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="N. GONZALEZ"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/redborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="NGONGE"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/redborder"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                </TextView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTornaIndietro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Torna Indietro"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:background="@drawable/rounded_border"
        android:layout_marginHorizontal="30dp"
        />
</LinearLayout>