<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/new_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crea campionato"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nomeLega"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:autofillHints="nome Lega"
                android:background="@drawable/new_edittext"
                android:drawableEnd="@drawable/baseline_person_24"
                android:hint="Nome Lega"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />


            <EditText
                android:id="@+id/numeroPartecipanti"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="Numero Partecipanti"
                android:background="@drawable/new_edittext"
                android:drawableEnd="@drawable/format_list_numbered_fill0_wght400_grad0_opsz24"
                android:hint="Numero Partecipanti"
                android:inputType="textPassword"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <EditText
                android:id="@+id/codiceAccesso"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="Codice d'accesso"
                android:background="@drawable/new_edittext"
                android:drawableEnd="@drawable/vpn_key_fill0_wght400_grad0_opsz24"
                android:hint="Codice d'accesso"
                android:inputType="textPassword"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/blue"
                android:onClick="onLoginClick"
                android:text="Conferma"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onBackClick"
        android:padding="7dp"
        android:text="Accedi a un campionato"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />


</LinearLayout>
